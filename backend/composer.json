{
    "name": "tahmin1x2/backend-phalcon",
    "description": "Tahmin1x2 AI Football Prediction Platform - Phalcon Backend",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.2",
        "ext-phalcon": "^5.0",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-redis": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "phalcon/ide-stubs": "^5.0",
        "phalcon/dd": "^1.2",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.5",
        "guzzlehttp/guzzle": "^7.8",
        "predis/predis": "^2.2",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.7",
        "endroid/qr-code": "^5.0",
        "intervention/image": "^3.5",
        "nesbot/carbon": "^3.0",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.3",
        "robmorgan/phinx": "^0.16",
        "symfony/console": "^7.0",
        "symfony/cache": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Tahmin\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 app/",
        "analyze": "phpstan analyse app/ --level=5",
        "migrate": "vendor/bin/phinx migrate",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
